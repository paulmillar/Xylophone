<?xml version="1.0" encoding="utf-8" standalone="no"?>

<!DOCTYPE xylophone [
<!ENTITY % entities SYSTEM "../test-entities.xml" >
%entities;
]>


<!--+
    |  Check that default is used when a path lookup fails
    +-->

<xylophone>
  <publish>
    <object rdn="type">
      <attr name="type">Books</attr>

      <object rdn="collection">
	<attr name="collection">
	  <lookup xml-src-uri="&abs-test-path;/lookup/dynamic-2.xml"
		  path="/test/collection"/>
	</attr>
	
	<object rdn="Title"
		xml-src-uri="&abs-test-path;/lookup/dynamic-2.xml"
		select="/test/books/book">
	  <attr name="Title"><lookup xml-src-uri="&abs-test-path;/lookup/dynamic-2.xml" 
	  path="title"/></attr>

	  <attr not-empty="1"
		name="Author"><lookup xml-src-uri="&abs-test-path;/lookup/dynamic-2.xml" 
	  path="author"/></attr>

	  <attr name="Publisher"><lookup xml-src-uri="&abs-test-path;/lookup/dynamic-2.xml" 
	  path="publisher"/></attr>
	  <attr not-empty='1'
		name="TranslatedBy"><lookup xml-src-uri="&abs-test-path;/lookup/dynamic-2.xml" 
	  path="translated-by"/></attr>
	</object>
      </object>
    </object>
  </publish>
</xylophone>
